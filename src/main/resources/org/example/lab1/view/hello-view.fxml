<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.lab1.HomeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../imgs/votoImg.png" />
            </image>
        </ImageView>
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Bienvenido al Sistema de Votación" textAlignment="CENTER">
        </Label>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints halignment="RIGHT" />
            <ColumnConstraints halignment="LEFT" />
            </columnConstraints>
            <children>
                <Label style="-fx-text-fill: #333;" text="Identificación:" GridPane.columnIndex="1" />
                <TextField fx:id="TxtIngreso" onAction="#IngresoBtnClick" style="-fx-border-color: #ccc; -fx-padding: 5; -fx-background-radius: 5;" GridPane.columnIndex="2" />
                <Button fx:id="BtnIniciaVoto" onAction="#IngresoBtnClick" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;" text="Iniciar Votación" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            </children>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </children>
</VBox>
